{
  "name": "@matt-dunn/root",
  "version": "0.0.0",
  "private": true,
  "author": "Matt Dunn",
  "homepage": "https://matt-dunn.github.io/",
  "description": "Library monorepo",
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/matt-dunn/packages.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@storybook/addon-a11y": "^6.0.16",
    "@storybook/addon-docs": "^6.0.16",
    "@storybook/addon-knobs": "^6.0.16",
    "@storybook/react": "^6.0.16",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-plugin-emotion": "^10.0.33",
    "bootstrap": "^4.5.2",
    "commitizen": "^4.1.2",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "cypress": "^5.0.0",
    "cypress-multi-reporters": "^1.4.0",
    "cz-conventional-changelog": "3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.7.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-mdx": "^1.8.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-emotion": "^10.0.32",
    "jest-junit": "^11.1.0",
    "jsdom": "^16.4.0",
    "lerna": "^3.22.1",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.1.0",
    "mochawesome-report-generator": "^5.1.0",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/css": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "typesafe-actions": "^5.1.0"
  },
  "scripts": {
    "storybook": "start-storybook --ci --port 8080",
    "storybook:build": "build-storybook --output-dir dist/storybook --quiet",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lint": "eslint ./ --ext .jsx,.js,.ts,.tsx,.mdx --fix",
    "test": "jest --coverage --passWithNoTests",
    "prebuild": "yarn test",
    "build": "lerna exec --since --parallel -- yarn build",
    "postbuild": "yarn storybook:build && yarn report:build",
    "prebuild:all": "yarn test",
    "build:all": "lerna exec --parallel -- yarn build",
    "postbuild:all": "yarn storybook:build && yarn report:build",
    "prerelease": "yarn build",
    "release": "lerna publish --yes --create-release=github",
    "commit": "npx git-cz",
    "report:cypress:merge": "mochawesome-merge reports/cypress/results/json/**/*.json > reports/cypress/results/index.json",
    "report:cypress:generate": "marge reports/cypress/results/index.json --reportDir dist/e2e/ --assetsDir dist/e2e/assets --reportPageTitle index.html",
    "report:cypress:build": "yarn report:cypress:merge && yarn report:cypress:generate && copyfiles -f **/cypress/videos/**/* dist/e2e//videos\n",
    "report:build": "yarn report:cypress:build",
    "ci": "yarn run build",
    "cd": "yarn run release"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
