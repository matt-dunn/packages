{
  "name": "@matt-dunn/root",
  "version": "0.0.0",
  "private": true,
  "author": "Matt Dunn",
  "homepage": "https://matt-dunn.github.io/",
  "description": "Library monorepo",
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/matt-dunn/packages.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "lint": "eslint ./ --ext .jsx,.js,.ts,.tsx,.mdx --fix",
    "test": "jest --coverage --passWithNoTests",
    "prebuild": "yarn test",
    "build": "lerna exec --since --parallel -- yarn build",
    "prebuild:all": "yarn test",
    "build:all": "lerna exec --parallel -- yarn build",
    "prerelease": "yarn build",
    "release": "lerna publish --yes --create-release=github",
    "commit": "npx git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
