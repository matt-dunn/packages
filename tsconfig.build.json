{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "exclude": [
    "test",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
